{
  "name": "flexberry-launcher",
  "productName": "flexberry-launcher",
  "version": "0.1.0",
  "description": "Lightweight and customizable launcher for Minecraft",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-mac": "electron-forge make --platform darwin",
    "make-linux": "electron-forge make --platform linux",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "keywords": [],
  "author": {
    "name": "Kuzey Kurtulu≈ü",
    "email": "kuzeeeyk@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "name": "flexberry_launcher"
          },
          "platforms": [
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "flexberry_launcher",
            "icon": "./src/assets/images/flexberry-launcher-icon.png"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "lowdb": "^1.0.0",
    "msmc": "^3.1.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "electron": "18.2.3"
  }
}
